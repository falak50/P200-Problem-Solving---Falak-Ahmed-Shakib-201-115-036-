#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
#define fastread() (ios_base:: sync_with_stdio(false),cin.tie(NULL))
typedef long long ll;
typedef unsigned long long ull;
typedef pair<ll,ll>pll;
typedef pair<pair<ll,ll>,ll>plll;
#define ff first
#define ss second
#define fi first
#define se second
#define pb push_back
#define eb emplace_back
#define all(x) x.begin(),x.end()
void loop()
{
    for(ll i=0; i<10; i++) {};
}
const ll N=3e4;
ll ara[N+1];
int main()
{

  fastread();

  ll t;

  cin>>t;


  ara[1]=2;
  for(ll i=2;i<=N;i++)
  {
      ara[i]=ara[i-1]+(2*i)+i-1;
  }

  //     cout<<ara[N]<<endl;

 // for(ll i=1;i<10;i++)cout<<ara[i]<<" ";cout<<endl;
  while(t--)
{


  ll n;

  cin>>n;

  ll cnt=0;
  for(ll i=N;i>0;i--)
  {
      if(ara[i]<=n)
      {
          ll b=n/ara[i];
          n=n%ara[i];
          cnt+=b;
         // cout<<n<<" "<<cnt<<" "<<ara[i]<<" "<<i<<endl;
      }


  }


  cout<<cnt<<endl;

}







}


