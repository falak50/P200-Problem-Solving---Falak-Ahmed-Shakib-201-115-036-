#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
#define fastread() (ios_base:: sync_with_stdio(false),cin.tie(NULL))
typedef long long ll;
typedef unsigned long long ull;
typedef pair<ll,ll>pll;
typedef pair<pair<ll,ll>,ll>plll;
#define ff first
#define ss second
#define fi first
#define se second
#define pb push_back
#define eb emplace_back
#define all(x) x.begin(),x.end()
void loop()
{
    for(ll i=0; i<10; i++) {};
}

int main()
{

    fastread();


   ll n;

   cin>>n;

   vector<ll>v;


   if(n%2)
   {
       v.pb(3);
       n-=3;
   }


   while(n)
   {
       n-=2;
       v.pb(2);
   }


   cout<<v.size()<<endl;
   reverse(all(v));
   for(auto x:v)cout<<x<<" ";cout<<endl;









}
