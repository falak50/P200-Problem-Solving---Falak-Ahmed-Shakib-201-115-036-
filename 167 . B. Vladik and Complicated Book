typedef long long ll;
#define fastread() (ios_base:: sync_with_stdio(false),cin.tie(NULL))
typedef long long ll;
typedef unsigned long long ull;
typedef pair<ll,ll>pll;
typedef pair<pair<ll,ll>,ll>plll;
#define ff first
#define ss second
#define fi first
#define se second
#define pb push_back
#define eb emplace_back
#define all(x) x.begin(),x.end()
void loop()
{
    for(ll i=0; i<10; i++) {};
}
const ll N=2e6;
ll ara[N+1];
ll ans[N+1];

int main()
{

  //  fastread();



    ll n,m;
    cin>>n>>m;
    ll ara[n+1];
    for(ll i=1;i<=n;i++)cin>>ara[i];


    while(m--)
    {
        ll l,r,x;

        cin>>l>>r>>x;
        ll cnt=0;
        for(ll i=l;i<=r;i++)
        {
            if(ara[i]<ara[x])cnt++;
        }


        if(l+cnt==x)cout<<"Yes"<<endl;
        else cout<<"No"<<endl;


    }












}
