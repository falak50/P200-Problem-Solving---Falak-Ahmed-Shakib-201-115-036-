    for(ll i=0; i<10; i++) {};
}
const ll N=2e6;

int main()
{

  fastread();

   ll n;

  cin>>n;

  ll ara[n+1];

  for(ll i=0;i<n;i++)cin>>ara[i];


  ll cnt=1;

  ll mx=1;
  for(ll i=1;i<n;i++)
  {
      if(ara[i]>ara[i-1])
      {
          cnt++;
      }else cnt=1;

      mx=max(mx,cnt);
  }
  cout<<mx<<endl;;





}


