int main()
{

   fastread();

   ll t;
   cin>>t;

   while(t--)
   {

       ll n;
       cin>>n;
       ll ara[n+1];
       for(ll i=0;i<n;i++)cin>>ara[i];
     bool f=true;
       for(ll i=0;i<n-2;i++)
       {
           if(ara[i]<ara[i+1] and ara[i+1]>ara[i+2])
           {
               f=false;
               cout<<"YES"<<endl;
               cout<<i+1<<" "<<i+2<<" "<<i+3<<endl;
               break;
           }
       }


   if(f)cout<<"NO"<<endl;



