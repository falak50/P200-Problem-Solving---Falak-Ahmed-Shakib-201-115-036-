#include<bits/stdc++.h>
using namespace std;
using ll = long long;
#define pb push_back
#define ff first
#define ss second
#define pb push_back
#define eb emplace_back
typedef pair<ll,ll>pll;
typedef pair<ll,pair<ll,ll>>plll;
int main()
{
 
     ll n;
 
     cin>>n;
 
     ll a[n+1];
 
 
     for(ll i=0;i<n;i++)cin>>a[i];
 
     sort(a,a+n);
 
 
     ll sum=0;
 
     for(ll i=0;i<n;i++)
     {
         sum+=abs(a[i]-a[i/2]);
     }
 
     cout<<sum<<endl;;
 
 
}
 
 
