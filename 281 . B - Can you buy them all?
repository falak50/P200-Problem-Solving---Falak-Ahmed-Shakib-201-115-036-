#include<bits/stdc++.h>
using namespace std;
typedef long long   ll;
typedef pair<ll,ll> pll;
#define fastread() (ios_base:: sync_with_stdio(false),cin.tie(NULL))
#define ff first
#define ss second
#define pb push_back
ll const MOD=998244353;
#define eb emplace_back
const int N=2e5+10;
int main()
{

    fastread();


     ll n,k;

     cin>>n>>k;
     ll a;
     ll sum=0;
     for(ll  i=0;i<n;i++)
     {
         cin>>a;

         if(i%2)
         {
             sum+=a;
             sum--;
         }else sum+=a;
     }

     if(sum<=k)cout<<"Yes"<<endl;
     else cout<<"No"<<endl;


}
